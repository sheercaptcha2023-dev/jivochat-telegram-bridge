# Переменные окружения для JivoChat-Telegram Bridge
# Скопируйте этот файл в .env и заполните своими данными

# Токен Telegram бота (получен от @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ID Telegram группы (куда отправлять уведомления)
TELEGRAM_CHAT_ID=your_chat_id_here

# Порт для запуска сервера (по умолчанию 5000)
PORT=5000

# Режим отладки (True для разработки, False для продакшена)
DEBUG=True
